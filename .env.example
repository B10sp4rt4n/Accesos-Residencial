# ========================================
# AX-S - Sistema de Control de Accesos
# Configuración de Variables de Entorno
# ========================================

# ---------------------------------------
# Base de Datos
# ---------------------------------------
# Modo: 'sqlite' o 'postgres'
DB_MODE=postgres

# SQLite (desarrollo local)
# DATABASE_URL=sqlite:///data/accesos.db

# PostgreSQL Neon (producción cloud)
DATABASE_URL=postgresql://neondb_owner:password@ep-xxxxx.us-east-2.aws.neon.tech/neondb?sslmode=require

# O variables separadas:
PG_HOST=ep-xxxxx.us-east-2.aws.neon.tech
PG_DATABASE=neondb
PG_USER=neondb_owner
PG_PASSWORD=tu_password_neon_aqui
PG_PORT=5432

# ---------------------------------------
# Seguridad
# ---------------------------------------
SECRET_KEY=cambia-esto-por-una-clave-super-segura-y-aleatoria
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7

# ---------------------------------------
# Integración Recordia (futuro)
# ---------------------------------------
RECORDIA_ENABLED=false
RECORDIA_ENDPOINT=https://api.recordia.io/v1
RECORDIA_API_KEY=tu-recordia-api-key
RECORDIA_TIMEOUT=30

# ---------------------------------------
# Notificaciones Email
# ---------------------------------------
SMTP_ENABLED=false
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=notificaciones@tucondominio.com
SMTP_PASSWORD=tu-password-de-app
SMTP_FROM_NAME=AX-S Sistema de Accesos

# ---------------------------------------
# Notificaciones WhatsApp (opcional)
# ---------------------------------------
WHATSAPP_ENABLED=false
WHATSAPP_API_KEY=tu-whatsapp-business-api-key
WHATSAPP_PHONE_ID=tu-phone-number-id
WHATSAPP_ADMIN_NUMBERS=+521234567890,+529876543210

# ---------------------------------------
# Notificaciones SMS (opcional)
# ---------------------------------------
SMS_ENABLED=false
TWILIO_ACCOUNT_SID=tu-account-sid
TWILIO_AUTH_TOKEN=tu-auth-token
TWILIO_FROM_NUMBER=+15005550006

# ---------------------------------------
# Aplicación
# ---------------------------------------
APP_NAME=AX-S
APP_VERSION=1.0.0
APP_ENV=development
DEBUG=true

# Puerto para FastAPI (cuando se implemente)
API_PORT=8000

# ---------------------------------------
# Streamlit
# ---------------------------------------
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0
STREAMLIT_SERVER_HEADLESS=true

# ---------------------------------------
# Analítica
# ---------------------------------------
ANALYTICS_ENABLED=true
ANOMALY_DETECTION_THRESHOLD=2.0
T1_T0_COMPARISON_ENABLED=true

# ---------------------------------------
# QR Codes
# ---------------------------------------
QR_DEFAULT_VALIDITY_HOURS=24
QR_IMAGE_SIZE=300
QR_ERROR_CORRECTION=H

# ---------------------------------------
# Cámara/Fotos
# ---------------------------------------
PHOTOS_ENABLED=true
PHOTOS_MAX_SIZE_MB=5
PHOTOS_STORAGE_PATH=data/evidencia

# ---------------------------------------
# HotVault (almacenamiento inmutable)
# ---------------------------------------
HOTVAULT_ENABLED=false
HOTVAULT_ENDPOINT=https://hotvault.aws.example.com
HOTVAULT_BUCKET=ax-s-evidencias
HOTVAULT_REGION=us-east-1
AWS_ACCESS_KEY_ID=tu-aws-access-key
AWS_SECRET_ACCESS_KEY=tu-aws-secret-key

# ---------------------------------------
# Logging
# ---------------------------------------
LOG_LEVEL=INFO
LOG_FILE=logs/ax-s.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# ---------------------------------------
# Rate Limiting (API)
# ---------------------------------------
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000
